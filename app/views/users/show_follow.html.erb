<div class="user container ">
  <%= render 'follow_form', user: @user if @user != current_user  %>
  <img src="<%= "/user_images/#{@user.image}?#{@user.updated_at.to_i}" %>" class="user-show-img" alt="Description">
  <h2><%= @user.name %></h2>

 
  <div class="user-time mb-2">
  </div>

  <div class="show-follow-btn d-flex  justify-content-center">
   <ul class="nav nav-pills " id="pills-tab" role="tablist">
     <li class="nav-item" role="presentation">
       <button
           class="nav-link <%= params[:tab] == 'following' ? 'active' : '' %>)"
           id="pills-home-tab"
           data-bs-toggle="pill"
           data-bs-target="#pills-home"
           type="button"
           role="tab"
           aria-controls="pills-home"
           >
           <%= @user.following.count %>フォロー中   <!--btn_name-->
       </button>
     </li>
     <li class="nav-item" role="presentation">
       <button
           class="nav-link <%= params[:tab] == 'followers' ? 'active' : '' %>)"
           id="pills-profile-tab"
           data-bs-toggle="pill"
           data-bs-target="#pills-profile"
           type="button"
           role="tab"
           aria-controls="pills-profile"
           >
           <%= @user.followers.count %>フォロワー    <!--btn_name-->
       </button>
     </li>
   </ul>
 </div>
 
 <div class="tab-content " id="pills-tabContent">
   <div
       class="tab-pane fade <%= params[:tab] == 'following' ? 'active show' : '' %>"
       id="pills-home"
       role="tabpanel"
       aria-labelledby="pills-home-tab"
       >
 
       <!--表示したいもの-------------------------------------------->      
       <% if @user.following.present? %>
         フォロー中ユーザー
         <%= render "shared/index_user", users: @user.following %>
       <% else %>
         フォローしているユーザーはいません
       <% end %>

            <!--表示したいもの-------------------------------------------->      
 
 
   </div> 
 
   <div
       class="tab-pane fade <%= params[:tab] == 'followers' ? 'active show' : '' %>"
       id="pills-profile"
       role="tabpanel"
       aria-labelledby="pills-profile-tab"
   >
 
     <!--表示したいもの-------------------------------------------->
     <% if @user.followers.present? %>
       フォロワー
       <%= render "shared/index_user", users: @user.followers %>
     <% else %>
       フォロワーがいません
     <% end %>

     <!--表示したいもの-------------------------------------------->      
 
 
  </div>
</div>
