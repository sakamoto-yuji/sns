<div class="main users-edit">
 <div class="user-edit-container">
     <div class="form-heading">アカウント情報の編集</div>
     <%= form_with(url: user_path(id: @user.id), method: "patch",  multipart: true ) do %>
             <div class="form users-form">
             <div class="form-body">
             <% @user.errors.full_messages.each do |messages| %>
                <div class="form-error">
                  <%= messages %>
                </div>
               <% end %>
                 <p>アカウント名</p>
                 <input name="name" value="<%= @user.name %>" >
                 <p>プロフィール画像</p>
                 <input name="image" type="file">
                 <p>メールアドレス</p>
                 <input name="email" value="<%= @user.email %>" >
                 <input type="submit" value="保存">
             </div>
         </div>
        <% end %>
    </div>
</div>
