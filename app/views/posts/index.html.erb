<%= stylesheet_link_tag "posts" %>
<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <%= link_to("/posts/#{post.id}") do %>
      <div class="posts-index-item">
        <%= post.content %>
        <div class="post-time">
         <%= l post.updated_at %>
       </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
