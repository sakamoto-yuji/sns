<%= stylesheet_link_tag "posts" %>
<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
    <p>
   <%= @post.content %> 
    </p>
    <div class="post-time">
     <%= l @post.updated_at %>
    </div>
    <div class="post-menus">
        <%= link_to(t('.edit'), "/posts/#{@post.id}/edit") %>
        <%= link_to(t('.destroy'),"/posts/#{@post.id}/destroy",method: :delete) %>
      </div>
    </div>
  </div>
</div>
