<%= stylesheet_link_tag "posts" %>
<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading"><%= t('.title') %></h1>
  </div>
  <%= form_tag("/posts/#{@post.id}/update") do %>
   <div class="form">
      <div class="form-body">
       <% @post.errors[:content].each do |messages| %>
         <div class="form-error">
           <%= messages %>
         </div>
        <% end %>
        <textarea name="content">
         <%= @post.content %>
        </textarea>
        <input type="submit" value="保存">
      </div>
     </div>
  <% end %>
</div>