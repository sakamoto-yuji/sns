<div class="main posts-new">
  <div class="post-edit-container">
    <h1 class="form-heading"><%= t('.title') %></h1>
  </div>
  <%= form_with(url: post_path(id: @post.id), method: :patch) do %>
    <form>
   <div class="form" style="max-width: 500px;">
      <div class="form-body">
       <% @post.errors[:content].each do |messages| %>
         <div class="form-error">
           <%= messages %>
         </div>
        <% end %>
        <textarea name="content">
         <%= @post.content %>
        </textarea>
        <input type="submit" value="保存">
      </div>
     </div>
    </form>
  <% end %>
</div>
