<%= stylesheet_link_tag "posts" %>
<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">ツイートする</h1>
    <%= form_tag("/posts/create") do %>
    <div class="form">
      <div class="form-body">
       <% @post.errors[:content].each do |messages| %>
        <div class="form-error">
          <%= messages %>
        </div>
       <% end %>
        <textarea name="content">
         <%= @post.content %> 
        </textarea>
        <input type="submit" value="ツイートする">
      </div>
    </div>
    <%end%>
  </div>
</div>
