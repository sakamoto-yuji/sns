<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_with(url: posts_path, method: :post) do %>
    <div class="form">
      <div class="form-body">
       <% @post.errors[:content].each do |messages| %>
        <div class="form-error">
          <%= messages %>
        </div>
       <% end %>
        <textarea name="content">
         <%= @post.content %> 
        </textarea>
        <input type="submit" value="投稿する">
      </div>
    </div>
    <%end%>
  </div>
</div>
