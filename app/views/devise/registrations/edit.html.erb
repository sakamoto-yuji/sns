     <div class="form-heading text-center">パスワード変更</div>

<%= form_with(model: @user, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <form>
  <div class="form users-form">
    <div class="form-body">
  <%= render "devise/shared/error_messages", resource: resource %>

<!--  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>   -->

  <div class="field">
    <%= f.label :new_password %><br><span class="required-item text-nowrap">8文字以上、英数字を両方含めてください</span><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :new_password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "変更" %>
  </div>
    </div>
  </div>
<% end %>
  </form>

