<div class="user container text-center">
  <img src="<%= "/user_images/#{user.image}?#{user.updated_at.to_i}" %>">
  <h2><%= user.name %></h2>
  <p><%= user.email %></p>
  <div class="user-time mb-2">
    <%= l user.created_at %>
  </div>
  <% if user.id == current_user.id %>

    <%= link_to "編集", edit_user_path(current_user), class: "btn btn-primary" %>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      アカウント削除
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">アカウント削除</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            本当にアカウント削除しますか？
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
            <%= link_to "アカウント削除", user_path(user.id), method: :delete, class: "btn btn-danger" %>          
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
